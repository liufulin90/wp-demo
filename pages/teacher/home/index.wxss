/* pages/teacher/home/index.wxss */
@import "/wxss/nav.common.wxss";
.all-stu{
  color: #ff5722;
  text-align: center;
  padding: 15rpx 0;
  font-size: 18px;
}
.grade-wrap,
.grade-title,
.grade-body{
  width: 100%;
  display: block;
}
.grade-title{
  color: #555;
  text-align: left;
  padding: 20rpx 0;
  text-indent: 30rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.grade-title text{
  position: absolute;
  right: 30rpx;
  font-size: 18px;
  width: 20px;
  height: 20px;
}
.grade-title text::before{
  margin-left: -15px;
}
.grade-title text.open{
  transform: rotate(90deg);
}
.grade-body{
  width: 100%;
  margin-bottom: 30rpx;
}
.grade-wrap .grade-body .grade-item{
  width: 33.33%;
  text-align: center;
  display: inline-block;
  position: relative;
  margin-top: 30rpx; 

}
.grade-wrap .grade-body .grade-item image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.grade-wrap .grade-body .grade-item text{
  display: block;
}